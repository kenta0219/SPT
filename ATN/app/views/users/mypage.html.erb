<%= render 'users/video_header' %>


<div class="mypage">
	<div class="space"></div>
		<div class="mypage-contents clearfix">
			<% flash.each do |key, value| %>
			  <%= content_tag(:div, value, class: "#{key}") %>
			<% end %>
			<div class="mypage-title">My Page</div>
				<div class="mypage-text clearfix">
					<div class="user-image"><%= attachment_image_tag current_user, :image, :fill, 300, 300, format: 'jpeg', class: "profile-img-responsive pull-left image", fallback: "no-artist-image.jpg",size: '250x250' %></div>
					<div class="user-name"><%= current_user.name %></div>
						<div class="under clearfix"></div>
					<div class="user-email"><%= current_user.email %></div>
						<div class="under clearfix"></div>
					<div class="user-edit-button">
						<%= link_to edit_user_path(current_user.id) do %>
							<div class="material-icons edit-nav-icon">edit</div>
						<% end %>
					</div>
				</div>

				<div class="mypage-edit-post clearfix">
					<div class="edit-post-contents">
					<div class="edit-post-title">My Post List</div>
						<% @articles.each do |article| %>
			            	<div class="edit-video-text clearfix">
			            		<div class="edit-video-name-box">
					                <%= link_to show_video_path(article), class: "edit-video-name" do %>
					                    【<%= article.title %>】
					                <% end %>
				                </div>
				                    <div class="edit-video-tag">
				                      <% if article.tag %>
				                       ＜<%= article.tag.tag_name %>＞
				                      <% end %>
				                    </div>
				                    <div class="edit-video-information"><%= article.video_information %></div>
			                    		<%= link_to destroy_path(article) , method: :delete, data: {confirm: 'Are you sure you want to delete contents?'} do %>
			                    			<div class="edit-video-destroy">＜Delete Contents＞</div>
			                    		<% end %>
				                    	<div class="edit-video-film clearfix">
				                    		<%= link_to article.video_url.to_s do %>
					                			<%= image_tag(article.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
					                		<% end %>
					                	</div>
				           	 </div>
				        <% end %>
					</div>
				</div>
		</div>
</div>

