<%= render 'users/video_header' %>



<div class="index-video clearfix">
  <div class="space"></div>
    <div class="index-video-top">
        <div class="index-video-title clearfix">
          <i class="material-icons index-video-icon">ondemand_video</i> Video List <i class="material-icons index-video-icon">ondemand_video</i>
        </div>
    </div>

        <div class="index-video-tag-menu clearfix">
          <div class="index-squeeze-title">Squeeze</div>
            <% @tags.each do |tag| %>
              <%= link_to index_video_path(tag) do %>
                <div class="index-video-tag-name">
                  # <%= tag.tag_name %>
                </div>
              <% end %>
            <% end %>
        </div>

    <div class="index-video-contents clearfix">
        <% @articles.each do |article| %>
            <div class="index-video-text">
                <div class="index-video-film">
                  <%= image_tag(article.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
                </div><br>
                <%= link_to show_video_path(article), class: "index-video-name" do %>
                    【<%= article.title %>】
                <% end %>
                    <div class="index-video-tag">
                      <% if article.tag %>
                        ＜<%= article.tag.tag_name %>＞
                      <% end %>
                    </div>
                    <div class="index-video-information"><%= article.video_information %></div>
                      <% if article.user %>
                        <%= attachment_image_tag article.user, :image, :fill, 300, 300, format: 'jpeg', class: "profile-img-responsive pull-left image", fallback: "no-artist-image.jpg", size: "20x20" %>
                        <%= article.user.name %><br>
                        <span class="index-video-create">
                          <%= article.created_at.strftime("%Y/%m/%d %H:%M") %>
                        </span>
                      <% end %>
            </div>
        <% end %>
    </div>
</div>
<%= paginate @articles, class: "pagenate" %>
<footer>
  <div class="user-footer clearfix">@ssh.inc</div>
</footer>
